<% provide(:title, @owner.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="owner_info">
      <h1>
        <%= gravatar_for @owner %>
        <%= @owner.name %>
      </h1>
    </section>
  </aside>
    <div class="col-md-8">
    <% if @owner.boutiques.any? %>
      <h3>Boutiques (<%= @owner.boutiques.count %>)</h3>
      <ol class="boutiques">
        <%= render @boutiques %>
      </ol>
      # <%= will_paginate @boutiques %>
    <% end %>
  </div>
</div>